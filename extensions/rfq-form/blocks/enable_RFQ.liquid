
{{ 'rfq.css' | asset_url | stylesheet_tag  }}
 <button type="button" class="fixed-btn"><span class="btn-txt">Create Bundle</span></button> 
  <div class="overlay">&nbsp;</div>
<div class="bundle-wrapper">
  <span class="close-bundle">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
    </svg>
   </span>
<div class="container-row">
<div class="bundle-wrap">
 <div class="bundle-row">
   <figure class="bundle-img">
     <img class="rounded-[50%]" height="80px" width="80px" src="https://cdn.shopify.com/s/files/1/0610/6772/2818/files/dummy-img.webp?v=1742451051" alt="Dummy Image">
   </figure>
   <h3 class="bundle-title">Placeholder Image URL</h3>
   <div class="quantity-box">100</div>
   <button type="button" class="close-row">Delete</button> 
 </div>
  </div>
    <div class="form-wrapper">
    <form class="bundle-form ">
       <input type="text" id="fname" name="fname" placeholder="Bundle Name" class="input-control">
       <button type="button" class="btn-bundle">Create Bundle</button> 
    </form>
  </div>
</div>
</div>


<script src="{{ 'rfq.js' | asset_url }}" defer></script>
    {% schema %}
    {
      "name": "Enable Bundle",
      "target": "body",
      "stylesheet": "rfq.css",
      "javascript": "rfq.js",
      "settings": [
        { "type": "text", "id": "class", "label": "Class", "default": "button" },
        { "type": "text", "id":"padding", "default": "10px 5px", "label": "Padding"},
        { "type": "text", "id":"margin", "default": "10px 10px", "label": "Margin"}
      ]
    }
    {% endschema %}